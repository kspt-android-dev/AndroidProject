<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             android:background="@color/colorBackground">


    <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintWidth_default="wrap"
            app:layout_constraintHeight_default="wrap"
            android:scaleType="centerCrop"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintVertical_bias="0.5"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">
        <Button
                android:text="@string/single_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/single_game_button"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:textSize="18sp"
                android:textAlignment="center"/>
        <Button
                android:text="@string/duo_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/duo_game_button"
                android:textAppearance="@android:style/TextAppearance.Material.Widget.Button.Borderless.Colored"
                android:textSize="18sp"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"/>
        <Button
                android:text="@string/rename_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rename_button"
                android:textAppearance="@android:style/TextAppearance.Material.Widget.Button.Borderless.Colored"
                android:textSize="18sp"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"/>
        <Button
                android:text="@string/info_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/info_button"
                android:textAppearance="@android:style/TextAppearance.Material.Widget.Button.Borderless.Colored"
                android:textSize="18sp"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"/>
        <Button
                android:text="@string/exit_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/exit_button"
                android:textAppearance="@android:style/TextAppearance.Material.Widget.Button.Borderless.Colored"
                android:textSize="18sp"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>