<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundingaame"
    tools:context=".MainActivity"
    android:orientation="vertical">


    <ImageButton
        android:id="@+id/helpTitleButton"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_weight="2"
        android:background="@drawable/logohelp"
        android:contentDescription="@string/back_button"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginTop="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/helpTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/helpTitle"
                android:textColor="@color/colorHelpTitle"
                android:textSize="18sp"
                android:textStyle="bold|italic"
                android:gravity="start"/>

            <TextView
                android:id="@+id/helpDescription1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/helpDescription1"
                android:textColor="@color/colorHelpDescription"
                android:textSize="15sp"
                android:textStyle="bold"
                android:gravity="start"
                android:layout_marginTop="15dp"/>

            <TextView
                android:id="@+id/helpDescription2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/helpDescription2"
                android:textColor="@color/colorHelpDescription"
                android:textSize="15sp"
                android:textStyle="bold"
                android:gravity="start"/>

            <TextView
                android:id="@+id/helpDescription3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/helpDescription3"
                android:textColor="@color/colorHelpDescription"
                android:textSize="15sp"
                android:textStyle="bold"
                android:gravity="start"/>

            <TextView
                android:id="@+id/helpSentence1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/helpSentence1"
                android:textColor="@color/colorHelpTitle"
                android:textSize="18sp"
                android:textStyle="bold|italic"
                android:gravity="start"
                android:layout_marginTop="20dp"/>

            <ImageView
                android:id="@+id/imageSentence2"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="start"
                android:layout_marginTop="15dp"
                app:srcCompat="@drawable/explus"
                android:contentDescription="@string/plus_button"/>

            <TextView
                android:id="@+id/helpSentence2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/helpSentence2"
                android:textColor="@color/colorHelpSentence"
                android:textSize="15sp"
                android:textStyle="bold"
                android:gravity="start"/>

            <ImageView
                android:id="@+id/imageSentence3"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="start"
                android:layout_marginTop="15dp"
                app:srcCompat="@drawable/exminus"
                android:contentDescription="@string/minus_button"/>

            <TextView
                android:id="@+id/helpSentence3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/helpSentence3"
                android:textColor="@color/colorHelpSentence"
                android:textSize="15sp"
                android:textStyle="bold"
                android:gravity="start"/>

            <ImageView
                android:id="@+id/imageSentence4"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="start"
                android:layout_marginTop="15dp"
                app:srcCompat="@drawable/exmultiply"
                android:contentDescription="@string/multiply_button"/>

            <TextView
                android:id="@+id/helpSentence4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/helpSentence4"
                android:textColor="@color/colorHelpSentence"
                android:textSize="15sp"
                android:textStyle="bold"
                android:gravity="start"/>

            <ImageView
                android:id="@+id/imageSentence5"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="start"
                android:layout_marginTop="15dp"
                app:srcCompat="@drawable/exshare"
                android:contentDescription="@string/share_button"/>

            <TextView
                android:id="@+id/helpSentence5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/helpSentence5"
                android:textColor="@color/colorHelpSentence"
                android:textSize="15sp"
                android:textStyle="bold"
                android:gravity="start"/>

            <ImageView
                android:id="@+id/imageSentence6"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="start"
                android:layout_marginTop="15dp"
                app:srcCompat="@drawable/expower"
                android:contentDescription="@string/power_button"/>

            <TextView
                android:id="@+id/helpSentence6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/helpSentence6"
                android:textColor="@color/colorHelpSentence"
                android:textSize="15sp"
                android:textStyle="bold"
                android:gravity="start"/>

            <ImageView
                android:id="@+id/imageSentence7"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="start"
                android:layout_marginTop="15dp"
                app:srcCompat="@drawable/excombine"
                android:contentDescription="@string/combine_button"/>

            <TextView
                android:id="@+id/helpSentence7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/helpSentence7"
                android:textColor="@color/colorHelpSentence"
                android:textSize="15sp"
                android:textStyle="bold"
                android:gravity="start"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>