<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              tools:context=".fragments.rename.RenameFragment"
              android:background="@color/colorBackground">
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:text="@string/player_1"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:id="@+id/enter_name_text_view_1"
                android:layout_weight="1"/>
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:hint="@string/enter_name"
                android:ems="10"
                android:id="@+id/enter_name_player_1"
                android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:text="@string/player_2"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:id="@+id/enter_name_text_view_2"
                android:layout_weight="1"/>
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:hint="@string/enter_name"
                android:ems="10"
                android:id="@+id/enter_name_player_2"
                android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:text="@string/player_3"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:id="@+id/enter_name_text_view_3"
                android:layout_weight="1"/>
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:hint="@string/enter_name"
                android:ems="10"
                android:id="@+id/enter_name_bot"
                android:layout_weight="1"/>
    </LinearLayout>
    <Button
            android:text="@string/return_menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/return_menu"/>

</LinearLayout>
