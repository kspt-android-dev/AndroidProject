<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="5dp"
        android:divider="@drawable/divider"
        android:showDividers="middle">

        <TextView
            android:id="@+id/creation_alarm_dialog_choose_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="3dp"
            android:gravity="center"
            android:hint="@string/dialog_choose_date"
            android:textSize="16sp"
            android:background="@drawable/card_background"/>

        <TextView
            android:id="@+id/creation_alarm_dialog_choose_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="3dp"
            android:gravity="center"
            android:hint="@string/dialog_choose_time"
            android:textSize="16sp"
            android:background="@drawable/card_background"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="3dp"
        android:gravity="center"
        android:hint="@string/dialog_repeat"
        android:background="@drawable/card_background"
        android:textSize="16sp"/>

</LinearLayout>