<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backdef"
    tools:context=".Game">

    <TextView
        android:id="@+id/namePlayer"
        android:layout_width="@dimen/gamePortraitTextViewWidthHeight"
        android:layout_height="@dimen/gamePortraitTextViewWidthHeight"
        android:layout_marginBottom="@dimen/gamePortraitMarginBottom"
        android:layout_marginEnd="@dimen/gamePortraitMarginEndStart"
        android:layout_marginStart="@dimen/gamePortraitMarginEndStart"
        android:text=""
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.027"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/nextTurn"
        android:layout_width="@dimen/gamePortraitButtonWidth"
        android:layout_height="@dimen/gamePortraitButtonHeight"
        android:layout_marginBottom="@dimen/gamePortraitMarginBottomNextTurn"
        android:layout_marginEnd="@dimen/gamePortraitMarginEndNextTurn"
        android:layout_marginStart="@dimen/gamePortraitMarginStartNextTurn"
        android:background="@drawable/bot"
        android:text = "@string/nextTurn"
        android:onClick="onClickNextTurn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/startGame"
        android:layout_width="@dimen/gamePortraitButtonWidth"
        android:layout_height="@dimen/gamePortraitButtonHeight"
        android:layout_marginBottom="@dimen/gamePortraitMarginBottomStartGame"
        android:layout_marginEnd="@dimen/gamePortraitMarginEndStartGame"
        android:layout_marginStart="@dimen/gamePortraitMarginStartStartGame"
        android:background="@drawable/bot"
        android:onClick="onClickStartGame"
        android:text="@string/startGame"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/newWord"
        android:layout_width="@dimen/gamePortraitButtonWidth"
        android:layout_height="@dimen/gamePortraitButtonHeight"
        android:layout_marginBottom="@dimen/gamePortraitMarginBottomNewWord"
        android:layout_marginEnd="@dimen/gamePortraitMarginEndNewWord"
        android:layout_marginStart="@dimen/gamePortraitMarginStartNewWord"
        android:background="@drawable/bot"
        android:text="@string/newWord"
        android:onClick="onClickNewWord"
        app:layout_constraintBottom_toBottomOf="@+id/frameGame"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/recylce"
        android:layout_width="@dimen/gamePortraitButtonRecycleWidth"
        android:layout_height="@dimen/gamePortraitButtonRecycleHeight"
        android:layout_marginBottom="@dimen/gamePortraitMarginBottomRecycle"
        android:layout_marginEnd="@dimen/gamePortraitMarginEndRecycle"
        android:layout_marginStart="@dimen/gamePortraitMarginStartRecycle"
        android:background="@drawable/recycle"
        android:onClick="onClickRecycle"
        android:text=""
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.971"
        app:layout_constraintStart_toStartOf="parent" />

    <FrameLayout
        android:id="@+id/frameGame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

    </FrameLayout>
</android.support.constraint.ConstraintLayout>