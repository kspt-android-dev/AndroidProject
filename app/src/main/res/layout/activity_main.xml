<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back"
    tools:context=".MainActivity">
    <Button
        android:id="@+id/aboutButton"
        android:layout_width="@dimen/mButtonWidth"
        android:layout_height="@dimen/mButtonHeight"
        android:layout_marginBottom="@dimen/mMarginBottom"
        android:layout_marginEnd="@dimen/mMarginEnd"
        android:layout_marginStart="@dimen/mMarginStart"
        android:layout_marginTop="@dimen/mMarginTop"
        android:background="@drawable/bot"
        android:onClick="onClickAbout"
        android:text="@string/aboutButton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/newGame"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/newGame"
        android:layout_width="@dimen/mButtonWidth"
        android:layout_height="@dimen/mButtonHeight"
        android:layout_marginBottom="@dimen/mMarginBottom"
        android:layout_marginEnd="@dimen/mMarginEnd"
        android:layout_marginStart="@dimen/mMarginStart"
        android:layout_marginTop="@dimen/mMarginTop"
        android:background="@drawable/bot"
        android:onClick="onClickNewGame"
        android:text="@string/newGame"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.587" />
</android.support.constraint.ConstraintLayout>