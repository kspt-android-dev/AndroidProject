<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".MainActivity"
    android:orientation="vertical">


    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/titleImage"
            android:layout_width="384dp"
            android:layout_height="230dp"
            android:contentDescription="@string/title_name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/title" />

        <ImageButton
            android:id="@+id/soundButton"
            android:layout_width="45dp"
            android:layout_height="55dp"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="180dp"
            android:background="@drawable/soundon"
            android:contentDescription="@string/button_sound"
            app:layout_constraintEnd_toEndOf="@+id/titleImage"
            app:layout_constraintHorizontal_bias="0.845"
            app:layout_constraintStart_toStartOf="@+id/titleImage"
            app:layout_constraintTop_toTopOf="@+id/titleImage" />
    </android.support.constraint.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="12dp">

        <ImageButton
            android:id="@+id/playButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/play"
            android:contentDescription="@string/button_play"
            android:layout_weight="1"
            android:layout_gravity="start"
            android:layout_marginRight="170dp"
            android:layout_marginEnd="170dp"/>

        <ImageButton
            android:id="@+id/helpButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/help"
            android:contentDescription="@string/button_help"
            android:layout_weight="1"
            android:layout_gravity="end"
            android:layout_marginLeft="170dp"
            android:layout_marginStart="170dp"/>

        <ImageButton
            android:id="@+id/statsButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/stats"
            android:contentDescription="@string/button_stats"
            android:layout_weight="1"
            android:layout_gravity="start"
            android:layout_marginRight="170dp"
            android:layout_marginEnd="170dp"/>

        <ImageButton
            android:id="@+id/quitButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/quit"
            android:contentDescription="@string/button_quit"
            android:layout_weight="1"
            android:layout_gravity="end"
            android:layout_marginLeft="170dp"
            android:layout_marginStart="170dp"/>

    </LinearLayout>

</LinearLayout>