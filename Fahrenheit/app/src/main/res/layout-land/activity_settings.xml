<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/black"
        tools:context=".SettingsActivity">

    <TextView
            android:id="@+id/switch_style_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Светлый стиль"
            android:textColor="@android:color/white"
            android:padding="17dp"
            android:textSize="19sp"
            android:fontFamily="@font/my_font"
            app:layout_constraintBottom_toTopOf="@id/on_off_music_btn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
    />

    <TextView
            android:id="@+id/on_off_music_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Выключить музыку"
            android:textColor="@android:color/white"
            android:padding="17dp"
            android:textSize="19sp"
            android:fontFamily="@font/my_font"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
    />

    <TextView
            android:id="@+id/on_off_censor_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Включить цензуру"
            android:textColor="@android:color/white"
            android:padding="17dp"
            android:textSize="19sp"
            android:fontFamily="@font/my_font"
            app:layout_constraintTop_toBottomOf="@id/on_off_music_btn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
    />

</androidx.constraintlayout.widget.ConstraintLayout>